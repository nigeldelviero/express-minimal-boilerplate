{
  "name": "express-minimal-boilerplate",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "dev": "nodemon --watch src --exec \"swc src -d dist && node dist/app.js\"",
    "build": "swc src -d dist",
    "start": "node dist/app.js",
    "prepare": "husky",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "nigeldelviero (delvieronigel@gmail.com)",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 22"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/express": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
